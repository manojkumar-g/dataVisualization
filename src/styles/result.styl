@import "jeet"
@import "rupture"
@import url('https://fonts.googleapis.com/css?family=Revalia|Ubuntu')

.results
  column(1)
  h1
    column(1)
    font-family Revalia
    color maroon
    font-size 2em
    text-align center
.allFilters
  column(1)
  font-family Ubuntu
  border 5px solid maroon
  border-left 0px
  border-right 0px
.filterType
  column(1)
  h2
    column(1/6)
    color maroon
    padding 0
  ul
    column(4/6)
    inline-list()
    padding 15px
    li
      text-transform uppercase
      cursor pointer
      padding 2px
      margin 5px
      rounded()
      background maroon
      color gray
.filterResult
  column(1)
  overflow scroll
  height 60vh
  font-family Ubuntu
.matchTile
  padding 10px
  color gray
  column(1)
  border-bottom: 2px solid maroon
  ul
    inline-list()
    column(1)
    li
      column(4/12)
.loc
  color olive
  margin-right 2px
.showcase
  column(1/3)
  text-align center
  color navy
  height 200px
  background maroon
  margin 10px
  margin-left 0px
.summ
  column(2/3)
  blockquote: red
.stats
  cursor pointer
  span
    padding 2px
    height 100%
    color blue
    border-bottom 3px solid

.matchgraphy
  column(1)
  background red
.toggler
  column(1)
