@import url('https://fonts.googleapis.com/css?family=Revalia|Ubuntu')


.hello
  color white
.homeContent
    column(1)
    overflow-y: auto
    height: 90%
.summary
  column(1)
  h1
    column(1)
    font-family Revalia
    color maroon
    font-size 2em
    text-align center
.dots
  column(1)
  text-align center
  color $gray
  font-size 1em
  margin-top 0
  i
    padding 0px 15px
    cursor pointer
    &:hover
      animation: glow 1s infinite alternate
  .dotActive
    animation: glow 1s infinite alternate
.sumGraph
  span(1/2)
  height: 500px
.table
  span(1/2)
  height: 500px
.tableData
  column(1)
  span
    margin-top: 50px
    column(1)
    font-family: Ubuntu
    text-transform: uppercase
    color maroon
    font-size 2em
  height: 100%
@keyframes glow
  from
    transform scale(1.3)
    color: $gray
  to
    transform scale(2)
    color: $maroon
