@import url('https://fonts.googleapis.com/css?family=Revalia|Ubuntu')


.hello
  color white
.homeContent
    column(1)
    height: 90%
.summary
  column(1)
  h1
    column(1)
    font-family Revalia
    color maroon
    font-size 2em
    text-align center
.dots
  column(1)
  text-align center
  color $gray
  font-size 1em
  margin-top 0
  i
    padding 0px 15px
    cursor pointer
    &:hover
      animation: glow 1s infinite alternate
  .dotActive
    animation: glow 1s infinite alternate
.sumGraph
  span(3/8)
  height: 500px
.table
  span(5/8)
  height: 500px
.tableData
  column(1)
  table
    font-family: Ubuntu
    column(11/12)
    padding 5px
    background: black
    color: white
    margin-top: 50px
    box-shadow: 0px 0px 34px 13px rgba(0,0,0,0.75)
    th,td
      padding: 5px 10px
      padding-right: 0px
      box-shadow: 0px 0px 34px 13px rgba(0,0,0,0.2)
    for c in (2..5)
      tr:nth-child({c})
        td
          border-bottom: 1px solid $maroon
          box-shadow: 0px 0px 34px 13px rgba(0,0,0,0.2)
    animation: toggle 1s infinite alternate
@keyframes glow
  from
    transform scale(1.3)
    color: $gray
  to
    transform scale(2)
    color: $maroon
@keyframes toggle
  from
    height: 100px
  to
    height: 200px
