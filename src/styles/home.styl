@import url('https://fonts.googleapis.com/css?family=Revalia')

.homeContent
    column(1)
    overflow-y: scroll
    height: 90%
.summary
  column(1)
  h1
    column(1)
    font-family Revalia
    color maroon
    font-size 2em
    text-align center
.dots
  column(1)
  text-align center
  color $gray
  font-size 1em
  margin-top 0
  i
    padding 0px 15px
    cursor pointer
    &:hover
      animation: glow 1s infinite alternate
  .dotActive
    animation: glow 1s infinite alternate
.sumGraph
  column(1/4)
  height 100%
@keyframes glow
  from
    transform scale(1.3)
    color: $gray
  to
    transform scale(2)
    color: $maroon
